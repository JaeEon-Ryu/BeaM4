<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SortByImageFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_SBI"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.22" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:layout_weight="1.48"/>
            <ImageView
                android:id="@+id/view1_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:src="@drawable/logo_noback" />


        </LinearLayout>
    </LinearLayout>


    <View
        android:id="@+id/view_SBI"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/layout_SBT"/>



    <ListView
        android:id="@+id/list_view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        />



</LinearLayout>